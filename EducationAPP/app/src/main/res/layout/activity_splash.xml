<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_advanced">

    <!-- 粒子背景层 -->
    <com.example.educationapp.ui.splash.ParticleView
        android:id="@+id/particle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <!-- 波纹效果层 -->
    <com.example.educationapp.ui.splash.RippleView
        android:id="@+id/ripple_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <!-- 内容层 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/ic_app_logo"
            android:layout_marginBottom="32dp"
            android:contentDescription="智学伙伴Logo"
            android:elevation="8dp" />

        <!-- 应用名称 -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:elevation="4dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- 英文名称 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name_english"
            android:textSize="16sp"
            android:textColor="#E0FFFFFF"
            android:layout_marginBottom="24dp"
            android:letterSpacing="0.15"
            android:elevation="4dp" />

        <!-- 标语 -->
        <TextView
            android:id="@+id/tv_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_slogan"
            android:textSize="18sp"
            android:textColor="#B0FFFFFF"
            android:layout_marginBottom="64dp"
            android:fontFamily="sans-serif-light"
            android:elevation="4dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- 加载文字 -->
        <TextView
            android:id="@+id/tv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在启动智学伙伴..."
            android:textSize="16sp"
            android:textColor="#80FFFFFF"
            android:layout_marginTop="48dp"
            android:elevation="4dp"
            android:visibility="invisible" />

        <!-- 版本信息 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0 • Premium Edition"
            android:textSize="12sp"
            android:textColor="#60FFFFFF"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.1" />

    </LinearLayout>

</FrameLayout>
