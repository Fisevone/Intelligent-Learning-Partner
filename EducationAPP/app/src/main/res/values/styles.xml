<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 科技感标题样式 -->
    <style name="TechTitleStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/tech_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/tech_primary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">8</item>
    </style>
    
    <!-- 科技感按钮样式 -->
    <style name="TechButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/tech_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/tech_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- 科技感卡片样式 -->
    <style name="TechCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/tech_surface_elevated</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/tech_primary</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- 科技感输入框样式 -->
    <style name="TechTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/tech_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/tech_primary</item>
        <item name="boxCornerRadiusTopStart">25dp</item>
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>
    </style>
    
    <!-- 科技感文本样式 -->
    <style name="TechTextPrimary">
        <item name="android:textColor">@color/tech_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>
    
    <style name="TechTextSecondary">
        <item name="android:textColor">@color/tech_text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TechTextHint">
        <item name="android:textColor">@color/tech_text_hint</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <!-- 科技感浮动按钮样式 -->
    <style name="TechFabStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/tech_primary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/tech_secondary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">8dp</item>
    </style>
    
</resources>














