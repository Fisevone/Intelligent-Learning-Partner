<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/tech_primary_dark"
                android:endColor="@color/tech_secondary_dark"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/tech_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/tech_primary"
                android:endColor="@color/tech_secondary"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/tech_primary_light" />
        </shape>
    </item>
</selector>














